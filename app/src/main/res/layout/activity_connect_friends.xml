<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/connect_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rec1">

        <TextView
            android:id="@+id/FoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Connect to Friends"
            android:textColor="@color/colorHighlight"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/MapText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35px"
            android:layout_centerInParent="true"
            android:textColor="@color/colorHighlight"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35px"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body"
        android:layout_below="@+id/connect_header">

        <ImageView
            android:id="@+id/connect_image_header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/friends_header"
            android:layout_marginTop="-2dp">
        </ImageView>

        <RelativeLayout
            android:id="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_box"
            android:gravity="center"
            android:layout_below="@+id/connect_image_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have Friens who also use BITMOON?"
                android:layout_marginLeft="10dp"
                android:textColor="#454553"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite them to connect with you and track"
                android:layout_below="@+id/text1"
                android:textColor="#454553"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="your savings on a leader board."
                android:layout_below="@+id/text2"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-100dp"
                android:textColor="#454553"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_friend"
            android:layout_alignTop="@+id/box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your link to invite your friends to connect."
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_below="@+id/box"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://www.facebook.com"
            android:layout_below="@+id/text4"
            android:layout_alignLeft="@+id/box"
            android:layout_alignStart="@+id/box"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:background="@color/gray"
            android:textColor="#000"/>

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:background="#29ABE1"
            android:text="Share"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>