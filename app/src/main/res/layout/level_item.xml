<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#F3F3F3">

        <ImageView
            android:id="@+id/level_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/la_g"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/level_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:text="TextView"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/level_icon"
            android:layout_toRightOf="@+id/level_icon"
            android:layout_toEndOf="@+id/level_icon"
            android:textColor="#29ABE1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/level_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#29ABE1"
            android:textSize="14sp"
            android:layout_below="@+id/level_name"
            android:layout_alignLeft="@+id/level_name"
            android:layout_alignStart="@+id/level_name" />


    </RelativeLayout>

</RelativeLayout>