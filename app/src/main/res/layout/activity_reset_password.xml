<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rec1">

        <TextView
            android:id="@+id/FoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Change Password"
            android:textColor="@color/colorHighlight"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorHighlight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorHighlight"
            android:textSize="12sp"
            android:text="Save"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="16dp"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                  Please Enter Your PIN"
            android:textColor="#454553"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/digit1"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/pin_back"
            android:maxLength="1"
            android:paddingLeft="25dp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/text"
            android:layout_alignLeft="@+id/text"
            android:layout_alignStart="@+id/text"/>


        <EditText
            android:id="@+id/digit2"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/digit1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/digit1"
            android:layout_toRightOf="@+id/digit1"
            android:background="@drawable/pin_back"
            android:maxLength="1"
            android:paddingLeft="25dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/digit3"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/digit1"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/digit2"
            android:layout_toRightOf="@+id/digit2"
            android:background="@drawable/pin_back"
            android:maxLength="1"
            android:paddingLeft="25dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/digit4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/digit1"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/digit3"
            android:layout_toRightOf="@+id/digit3"
            android:background="@drawable/pin_back"
            android:maxLength="1"
            android:paddingLeft="25dp"
            android:inputType="number" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pin_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/header"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginTop="92dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pin_test"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter Your New Password"
            android:textColor="#454553"
            android:layout_marginTop="65dp"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/mobile_txt"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/mobile_field"
            android:hint="Password"
            android:paddingLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text2"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginLeft="-10dp"
            android:background="@color/borderColor"
            android:text="SUBMIT"
            android:textSize="20sp"
            android:textColor="#fff"/>


    </RelativeLayout>

</RelativeLayout>