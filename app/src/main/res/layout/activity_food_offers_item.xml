<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">


    <ImageView
        android:id="@+id/food_offers_icon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/rest_icon"
        android:layout_alignBottom="@+id/offer_limit_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <TextView
        android:id="@+id/food_offers_offer"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Abc"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/food_offers_icon"
        android:layout_toEndOf="@+id/food_offers_icon"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:textColor="#454553"/>

    <TextView
        android:id="@+id/food_offers_date"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Xyz"
        android:layout_below="@+id/food_offers_offer"
        android:layout_alignLeft="@+id/food_offers_offer"
        android:layout_alignStart="@+id/food_offers_offer"
        android:textColor="#454553"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/offer_limit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limit : "
        android:textSize="14sp"
        android:textColor="@color/hint"
        android:layout_below="@+id/food_offers_date"
        android:layout_alignLeft="@+id/food_offers_date"
        android:layout_alignStart="@+id/food_offers_date"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/offer_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="14sp"
        android:textColor="@color/hint"
        android:layout_alignBaseline="@+id/offer_limit_txt"
        android:layout_alignBottom="@+id/offer_limit_txt"
        android:layout_toRightOf="@+id/offer_limit_txt"
        android:layout_toEndOf="@+id/offer_limit_txt"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>