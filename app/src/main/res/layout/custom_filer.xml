<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/filter_main_layout">
    
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rec_filter">

        <TextView
            android:id="@+id/FilterText"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="FILTERS"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/done_filter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/done_filter"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/clear_filter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/clear_filter"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:id="@+id/relativeLayout2">

        <View
            android:id="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/rec_a"/>

        <Button
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/View1"
            android:background="#fff"/>



        <View
            android:id="@+id/View2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/rec_a"
            android:layout_below="@+id/View1"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/cuisine"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/View2"
            android:background="#fff"
            />


        <View
            android:id="@+id/View3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/rec_a"
            android:layout_below="@+id/View2"
            android:layout_marginTop="30dp"/>

        <ListView
            android:id="@+id/lista"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/View3"
            android:layout_marginTop="13dp"
            android:cacheColorHint="#00000000"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:choiceMode="multipleChoice"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lista"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Additional Details" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Type" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="34dp"
        android:text="Cuisine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="11dp"
        android:text="SELECT TYPE"
        android:textSize="10sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="10dp"
        android:text="SELECT CUISINE"
        android:textSize="10sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/cuisine_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9" />


</RelativeLayout>