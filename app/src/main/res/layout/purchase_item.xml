<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/res_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/offer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:text="Traditional Jordanian Dinner"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/offer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traditional Jordanian Dinner"
        android:layout_below="@+id/offer_name"
        android:layout_alignLeft="@+id/offer_name"
        android:layout_alignStart="@+id/offer_name"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="#000"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>